pipeline {
    agent { label 'terraform' }
    parameters {
      choice(
        name: 'myParameter',
        choices: "Yes\No",
        description: 'choice parameters' )
     }
    stages {
        stage('Terraform Version') {
            steps {
                sh 'terraform -version'
            }
        }
         stage('Terraform init') {
            steps {
                sh 'terraform init'
            }
        }
         stage('Terraform Plan') {
            steps {
                sh 'terraform plan'
            }
          }
         stage('Terraform apply') {
            steps {
                sh 'terraform apply -input=false -auto-approve'
                
            }
          }    
     } 
}
