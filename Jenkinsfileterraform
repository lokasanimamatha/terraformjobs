pipeline {
    agent { label 'terraform' }
    stages {
        stage('Terraform Version') {
            steps {
                sh 'terraform -version'
            }
        }
         stage('Terraform init') {
            steps {
                sh 'terraform init'
            }
        }
         stage('Terraform Plan') {
            steps {
                sh 'terraform plan'
            }
          }  
      } 
}
